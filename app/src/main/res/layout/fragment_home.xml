<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ViewPager para el slider de imágenes -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Contenedor para la introducción -->
    <LinearLayout
        android:id="@+id/introContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#50000000"
        android:layout_alignParentBottom="true">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Digital Store"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/textIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu tienda en línea de componentes electrónicos. Descubre nuestra amplia gama de productos de alta calidad y encuentra todo lo que necesitas para tus proyectos tecnológicos."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>
